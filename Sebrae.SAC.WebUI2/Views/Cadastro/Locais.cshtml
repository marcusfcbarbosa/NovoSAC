@{
    ViewBag.Title = "Cadastro de locais";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!-- BEGIN OFFCANVAS LEFT -->
<div class="offcanvas">
</div><!--end .offcanvas-->
<!-- END OFFCANVAS LEFT -->
<!-- BEGIN CONTENT-->
<div id="content">
    <section>
        <div class="section-header ">
            <ol class="breadcrumb"></ol>
        </div>
        <div class="section-body contain-lg">
            <!-- BEGIN VERTICAL FORM -->
            <div class="row">
                <div class="col-lg-offset-1 col-md-8">
                    <form class="form">
                        <div class="card">
                            <div class="card-head style-primary">
                                <header>Cadastro de Locais</header>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <select id="tpLocal" name="tpLocal" class="form-control">
                                                <option value="">&nbsp;</option>
                                                <option value="1">Externo</option>
                                                <option value="2">Unidade</option>
                                                <option value="3">ER</option>
                                                <option value="4">PAE</option>
                                                <option value="5">PA</option>
                                                <option value="6">Escala</option>
                                            </select>
                                            <label class="form-label" for="select1">Tipo local</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-8">
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="nome">
                                            <label class="form-label" for="regular1">Nome</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <input type="text" id="autocomplete1" class="form-control" data-inputmask="'mask': '9999-999'">
                                            <label class="form-label" for="select1">CEP</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <button type="submit" class="btn btn-flat btn-primary ink-reaction" id="consultacep"><i class="md md-search"></i></button>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <select id="autocomplete1" class="form-control select2-list" data-source="@Url.Content("~/Scripts/libs/select2/countries.json")">
                                                <option value="1">Rua</option>
                                                <option value="2">Avenida</option>
                                                <option value="3">Travessa</option>
                                            </select>
                                            <label class="form-label" for="select1">Logradouro</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-8">
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="endereco">
                                            <label class="form-label" for="regular1">Endereço</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="numero">
                                            <label class="form-label" for="regular1">Número</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="complemento">
                                            <label class="form-label" for="regular1">Complemento</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <input type="text" class="form-control" id="bairro">
                                            <label class="form-label" for="regular1">Bairro</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-2">
                                        <div class="form-group">
                                            <select id="uf" name="UF" class="form-control">
                                                <option value="">SP</option>
                                            </select>
                                            <label class="form-label" for="select1">UF</label>
                                        </div>
                                    </div>
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <select id="autocomplete1" class="form-control select2-list" data-source="@Url.Content("~/Scripts/libs/select2/countries.json")">
                                                <option value="SP">São Paulo</option>
                                                <option value="RJ">Rio de Janeiro</option>
                                            </select>
                                            <label class="form-label" for="regular1">Cidade</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row">
                                    <div class="col-sm-4">
                                        <div class="form-group">
                                            <select id="situacao" name="situacao" class="form-control">
                                                <option value="1">Ativo</option>
                                                <option value="2">Inativo</option>
                                            </select>
                                            <label class="form-label" for="select1">Situação</label>
                                        </div>
                                    </div>
                                </div>
                            </div><!--end .card-body -->
                            <div class="card-actionbar">
                                <div class="card-actionbar-row">
                                    <button type="submit" class="btn btn-raised btn-default-light ink-reaction">Salvar</button>
                                </div>
                            </div>
                        </div><!--end .card -->
                    </form>
                </div><!--end .col -->
            </div><!--end .row -->
            <!-- END VERTICAL FORM -->
            <!-- BEGIN VERTICAL FORM -->
            <div class="row">
                <div class="col-lg-offset-1 col-md-8">
                    <form class="form">
                        <div class="card panel">
                            <div class="card-head style-primary collapsed" data-toggle="collapse" data-parent="#accordion1" data-target="#accordion1-1">
                                <header>Salas</header>
                                <div class="tools">
                                    <a class="btn btn-icon-toggle"><i class="fa fa-angle-down"></i></a>
                                </div>
                            </div>
                            <div id="accordion1-1" class="collapse">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="identificacao">
                                                <label class="form-label" for="regular1">Identificação</label>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <input type="text" class="form-control" id="capacidade">
                                                <label class="form-label" for="regular1">Capacidade de pessoas</label>
                                            </div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="form-group">
                                                <select id="situacao" name="situacao" class="form-control">
                                                    <option value="">Ativo</option>
                                                    <option value="">Inativo</option>
                                                </select>
                                                <label class="form-label" for="select1">Situação</label>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <div class="form-group">
                                                <button type="submit" id="add" class="btn btn-flat btn-primary ink-reaction"><i class="md md-add"></i></button>
                                            </div>
                                        </div>
                                    </div>
                                    </br>
                                    <table class="table table-striped table-hover">
                                        <thead>
                                            <tr>
                                                <th></th>
                                                <th>Identificação</th>
                                                <th>Capacidade</th>
                                                <th>Situação</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <button type="button" class="btn btn-icon-toggle" data-toggle="tooltip" data-placement="top" data-original-title="Edit row"><i class="fa fa-pencil"></i></button>
                                                    <button type="button" class="btn btn-icon-toggle" data-toggle="tooltip" data-placement="top" data-original-title="Delete row"><i class="fa fa-trash-o"></i></button>
                                                </td>
                                                <td>Sala 1</td>
                                                <td>30</td>
                                                <td>Ativo</td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <button type="button" class="btn btn-icon-toggle" data-toggle="tooltip" data-placement="top" data-original-title="Edit row"><i class="fa fa-pencil"></i></button>
                                                    <button type="button" class="btn btn-icon-toggle" data-toggle="tooltip" data-placement="top" data-original-title="Delete row"><i class="fa fa-trash-o"></i></button>
                                                </td>
                                                <td>Sala 2</td>
                                                <td>40</td>
                                                <td>Inativo</td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <button type="button" class="btn btn-icon-toggle" data-toggle="tooltip" data-placement="top" data-original-title="Edit row"><i class="fa fa-pencil"></i></button>
                                                    <button type="button" class="btn btn-icon-toggle" data-toggle="tooltip" data-placement="top" data-original-title="Delete row"><i class="fa fa-trash-o"></i></button>
                                                </td>
                                                <td>Sala 3</td>
                                                <td>50</td>
                                                <td>Ativo</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div><!--end .card-body -->
                            </div>
                        </div><!--end .card -->
                    </form>
                </div><!--end .col -->
            </div><!--end .row -->
            <!-- END VERTICAL FORM -->
        </div>
    </section>
</div><!--end #content-->
<!-- END CONTENT -->
