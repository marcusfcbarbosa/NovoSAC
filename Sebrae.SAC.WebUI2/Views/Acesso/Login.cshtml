@model SAC_.WebUI2.Models.AutenticacaoModel
@{
    ViewBag.Title = "Entrar";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewBag.Title</title>
    <link href='http://fonts.googleapis.com/css?family=Roboto:300italic,400italic,300,400,500,700,900' rel='stylesheet' type='text/css' />
    @Styles.Render("~/bundles/css")
</head>
<body class="menubar-hoverable header-fixed ">
    <!-- BEGIN LOGIN SECTION -->
    <section class="section-account">
        <div class="img-backdrop" style="background-image: url('@Url.Content("~/Content/img/img_login.jpg")'"></div>
        <div class="spacer"></div>
        <div class="card contain-sm style-transparent">
            <div class="card-body">
                <div class="row">
                    <div class="col-sm-6">
                        <br />
                        <span class="text-lg text-bold text-primary">Acesse o Sistema de Atendimento</span>
                        <br /><br />
                        @using (Html.BeginForm("Login", "Acesso", FormMethod.Post, new { @class = "form floating-label", accept_charset = "utf-8" }))
                        {
                            <div class="form-group">
                                @Html.TextBoxFor(model => model.Login, "username", new { @type = "text", @class = "form-control", @id = "username", name = "username" })
                                @Html.Label("Login", null, new { @for = "username" })
                            </div>
                            <div class="form-group">
                                @Html.PasswordFor(model => model.Senha, new { @class = "form-control" })
                                @Html.Label("Senha", null, new { @for = "password" })
                            </div>
                            <br />
                            <div class="row">
                                <div class="col-xs-6 text-left">
                                </div><!--end .col -->
                                <div class="col-xs-6 text-right">
                                    @Html.TextBox("Entrar", "Entrar", new { @class = "btn btn-block btn-raised btn-default-login", type = "submit" })
                                </div><!--end .col -->
                            </div><!--end .row -->
                        }
                        <div>
                            @TempData["Mensagem"]
                        </div>
                    </div><!--end .col -->
                </div><!--end .card -->
            </div>
        </div>
    </section>
    <!-- END LOGIN SECTION -->
    <!-- BEGIN JAVASCRIPT -->
    <!-- END JAVASCRIPT -->
</body>
</html>